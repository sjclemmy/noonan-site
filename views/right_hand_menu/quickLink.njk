{% macro quickLink(title, image, link) %}
    <li class="media mb-2">
        {% if link %}
            <a class="d-block" href="{{ link }}" target ="_blank" rel="noopener nofollow" title = "Download a Copy">
                <img src="{{ image }}" class="mr-3 side-link" alt="{{ title }}"></a>
        {%  else %}
            <img src="{{ image }}" class="mr-3 side-link" title = "View image"
                 onclick = "viewImage(this.src)">
        {% endif %}
        <div class="media-body d-none d-lg-block">{{ title }}</div>
    </li>
{% endmacro %}